<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Chapeau"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:UserControlHeader x:Name="userControlHeader" Visibility="Visible" Grid.Row="0" SelectedFolderChanged="UserControlHeader_SelectedFolderChanged" />
        <ui:UserControlLoginView x:Name="userControlLoginView" Visibility="Visible" Grid.Row="1" />
        <ui:UserControlTableView x:Name="userControlTableView" Visibility="Hidden" Grid.Row="1" />
        <ui:UserControlOrderView x:Name="userControlOrderView" Visibility="Hidden" Grid.Row="1" />
        <ui:UserControlKitchenView x:Name="userControlKitchenView" Visibility="Hidden" Grid.Row="1" />
    </Grid>
</Window>
