<UserControl x:Class="UI.UserControlOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Converters -->
        <ui:StockAmountToVisibilityConverter x:Key="StockAmountToVisibilityConverter"/>
        <ui:LessThanTenConverter x:Key="LessThanTenConverter"/>

        <!-- Templates -->
        <DataTemplate x:Key="MenuItemTemplate_2">
            <Border Background="{StaticResource Color4}" CornerRadius="5" Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" />
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ShortName Display -->
                    <TextBlock Text="{Binding ShortName}" VerticalAlignment="Center" Margin="10" FontSize="16"/>

                    <!-- Yellow Circle for StockAmount < 10 -->
                    <Ellipse Fill="{StaticResource Color7}" Width="10" Height="10"
                             Visibility="{Binding StockAmount, Converter={StaticResource StockAmountToVisibilityConverter}, ConverterParameter=Yellow}"
                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5"/>

                    <!-- Red Circle for StockAmount == 0 -->
                    <Ellipse Fill="{StaticResource Color6}" Width="10" Height="10"
                             Visibility="{Binding StockAmount, Converter={StaticResource StockAmountToVisibilityConverter}, ConverterParameter=Red}"
                             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5"/>

                    <!-- Clickable Area -->
                    <Button Background="Transparent" BorderBrush="Transparent" Click="MenuItem_Click" Tag="{Binding}" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Transparency based on StockAmount -->
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StockAmount}" Value="0">
                                <Setter Property="Opacity" Value="0.3"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StockAmount, Converter={StaticResource LessThanTenConverter}}" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>

        <!-- Style for ListBox -->
        <Style TargetType="ListBox" x:Key="InvisibleListBoxStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                            <ScrollViewer Padding="{TemplateBinding Padding}" Focusable="false">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ui:UserControlHeader x:Name="userControlHeader" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu Overview with TabControl -->
            <TabControl Grid.Column="0" Margin="0,-21,20,41">
                <TabItem Header="Drinks">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Soft Drinks" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="SoftDrinksListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Beers" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="BeersListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Wines" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="WinesListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Spirits" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="SpiritsListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Coffee/Tea" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="CoffeeTeaListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Dinner">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Starters" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="DinnerStartersListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Entremets" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="DinnerEntremetsListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Mains" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="DinnerMainsListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Desserts" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="DinnerDessertsListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Lunch">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Starters" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="LunchStartersListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Mains" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="LunchMainsListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>

                            <TextBlock Text="Desserts" Style="{StaticResource HeaderTextBlockStyle}"/>
                            <ListBox x:Name="LunchDessertsListBox" ItemTemplate="{StaticResource MenuItemTemplate_2}" Style="{StaticResource InvisibleListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel MaxWidth="600"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Order Overview -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
                <TextBlock Text="Order Overview" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="OrderItemsControl" ItemsSource="{Binding orderItems}">
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Style="{StaticResource OrderItemContainerStyle}">
                                    <TextBlock Text="{Binding Item.Name}" Style="{StaticResource OrderItemTextBlockStyle}" Width="150"/>
                                    <Button Content="✎" Width="30" Height="30" Style="{StaticResource OrderItemButtonStyle}" Click="EditCommentButton_Click"/>
                                    <TextBlock Text="{Binding Comment}" Style="{StaticResource OrderItemTextBlockStyle}" Width="150"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="−" Style="{StaticResource OrderItemButtonStyle}" Click="DecreaseQuantityButton_Click"/>
                                        <TextBlock Text="{Binding Quantity}" Style="{StaticResource OrderItemTextBlockStyle}" Width="30" HorizontalAlignment="Center"/>
                                        <Button Content="+" Style="{StaticResource OrderItemButtonStyle}" Click="IncreaseQuantityButton_Click"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat=C}" Style="{StaticResource OrderItemTextBlockStyle}" Width="60" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <Button Content="Place Order" Width="100" Click="PlaceOrder_Click"/>
                <Button Content="Cancel Order" Width="100" Click="CancelOrder_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
