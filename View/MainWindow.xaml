<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:view="clr-namespace:View"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="Chapeau">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:ViewModelLoginView}">
                <view:UserControlLoginView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ViewModelKitchenView}">
                <view:UserControlKitchenView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ViewModelOrderView}">
                <view:UserControlOrderView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ViewModelTableView}">
                <view:UserControlTableView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </Grid>
</Window>
